@model askLNU.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "My profile";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/css/userProfile.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/js/userProfile.js")" rel="stylesheet" type="text/css" />

</head>

<div class="modal" id="modal">

    <div class="modal-guts">
        <h1>@ViewData["Title"]</h1>

                <form asp-action="Index">
                    <div class="form-row">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group col-md-5">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-5">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-5">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-5">
                            <label asp-for="Surname" class="control-label"></label>
                            <input asp-for="Surname" class="form-control" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-5">
                            <label asp-for="Course" class="control-label"></label>
                            <input asp-for="Course" class="form-control" />
                            <span asp-validation-for="Course" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-5">
                            <label asp-for="ImageSrc" class="control-label"></label>
                            <input asp-for="ImageSrc" class="form-control" />
                            <span asp-validation-for="ImageSrc" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-10" id="button">
                            <input type="submit" value="Save changes" class="btn btn-primary" />
                        </div>

                    </div>
                </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
